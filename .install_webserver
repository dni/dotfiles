#!/bin/bash

echo -n "update & upgrade"
apt-get update && apt-get upgrade
echo -n "install"
apt-get install -y wget zsh curl apache2 mysql-server php5 npm zip git vim

echo -n "installing npm modules"
npm upgrade
npm i -g bower grunt-cli less compass coffee-script mocha

echo "Initializing vim configs..."
ln -s ~/dotfiles/.vim ~/.vim
ln -s ~/dotfiles/.vimrc ~/.vimrc

echo "Initializing zsh..."
sh -c "$(wget https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"
mv ~/.zshrc ~/zshrc.old 2> /dev/null
ln -s ~/dotfiles/.zshrc ~/.zshrc
ln -s ~/dotfiles/.aliases ~/.aliases
chsh -s /bin/zsh
